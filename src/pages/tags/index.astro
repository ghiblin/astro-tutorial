---
import type { MarkdownInstance } from "astro";
import BaseLayout from "../../layouts/base-layout.astro";

const allPosts: MarkdownInstance<Record<string, any>>[] = await Astro.glob('../posts/*.md');

const tags: string[] = [...new Set(allPosts.map(post => post.frontmatter.tags).flat())]
---
<BaseLayout pageTitle="Tags">
  <div class="tags">
    {tags.map((tag) => <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>)}
  </div>
</BaseLayout>
<style>
  a {
    color: #00539F;
    text-decoration: none;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>